                    <img src="https://s3-alpha-sig.figma.com/img/905d/6ebd/74d1536c6813b3efa90f75a5bd6b8659?Expires=1724025600&Key-Pair-Id=APKAQ4GOSFWCVNEHN3O4&Signature=XI2-bfc8lyRFYXWD998iKxlWqdtAuIl7i3Vp7HXnpZ5syYra2kIKI5zd0QW3KQkcR05ANQdxWDXVy40Kv~avUA5uhJucmhtk1bbcH8gfiy2l9PJN05Uwjd0i3zHuxgxWcEfqH5IgG4XXkbBTKn1688E1-JV6-wzhrW1Rjx1I4dvkMIs40DKTJTZdBivVKDTymai9bRW4zgFNx0i1h3m~hlNkgronQvy7f5vSUsj2iiPVvPwi9fdZFwATgCKLB-f6F7WHv7giB6f22FV8UkayVeZoUOoP0Ld3px8H79VLSFUA~dtFTTAXoLCBRrKqP1d6hsT5EbY0z6h0daYUhvg5jw__" alt="Image Preview">
                    <legend>Saving's Information</legend>
                    <p>Type of savings: ${savingsType}</p>
                    <p>Interest rate: ${interestRate}%</p>
                    <p>Minimum deposit amount: ${minDeposit} VNĐ</p>
                    <p>Minimum days to withdraw: ${minDays} days</p>
                    <legend>Applicable Time</legend>
                    <p>Applied time: ${hour}h ${minute}</p>
                    <p>Applied date: ${date}</p>
                    <div class="buttons">
                        <button class="button submit-btn" id="confirm-edit">Submit</button>
                        <button class="button cancel-btn" id="cancel-edit">Cancel</button>
                    </div>
                </div>
            `;

            popup.style.display = "flex";

            const confirmEdit = document.getElementById("confirm-edit");
            const cancelEdit = document.getElementById("cancel-edit");

            confirmEdit.addEventListener("click", function () {
                popup.style.display = "none";
                successPopup.style.display = "flex";
            });

            cancelEdit.addEventListener("click", function () {
                popup.style.display = "none";
            });

            closeSuccessPopup.addEventListener("click", function () {
                successPopup.style.display = "none";
            });
        });
    });
