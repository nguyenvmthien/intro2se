<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Savings Account Type</title>
    <link rel="stylesheet" href="/css/analysis-daily-report.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="header">
        <h1>Analysis</h1>
        <div class="row">
            <h2>Daily Report</h2>
            <button type="submit" class="btn-CSV" id="csv_button">Export CSV</button>
        </div>
    </div>
    <div>
        <a href="http://localhost:3000/contact">
            <button class="button" id="contact-button">Contact</button>
        </a>
    </div>
    <div class="daily_report">
        <label for="date-report">Date</label>
        <input type="date" class="input-field" id="date-create" placeholder="01/01/2024">
    </div>
    <button class="create_button" id="create">Create Report</button>
    <div class="table-container">
        <table class="account-table">
            <caption>List of Accounts</caption>
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID Account</th>
                    <th>Type of Saving</th>
                    <th>Customer's Name</th>
                    <th>Balance (VND)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>MS1234</td>
                    <td>3 months</td>
                    <td>John Doe</td>
                    <td>100,000 VND</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>MS5678</td>
                    <td>Short Term</td>
                    <td>Jane Smith</td>
                    <td>200,000 VND</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>MS9101</td>
                    <td>6 months</td>
                    <td>Emily Davis</td>
                    <td>300,000 VND</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>MS1213</td>
                    <td>Non-term</td>
                    <td>Michael Brown</td>
                    <td>150,000 VND</td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>MS1415</td>
                    <td>1 year</td>
                    <td>Sarah Wilson</td>
                    <td>250,000 VND</td>
                </tr>
                <tr>
                    <td>6</td>
                    <td>MS1617</td>
                    <td>3 months</td>
                    <td>David Lee</td>
                    <td>175,000 VND</td>
                </tr>
                <tr>
                    <td>7</td>
                    <td>MS1819</td>
                    <td>6 months</td>
                    <td>Jessica Taylor</td>
                    <td>225,000 VND</td>
                </tr>
                <tr>
                    <td>8</td>
                    <td>MS2021</td>
                    <td>Non-term</td>
                    <td>Chris Martin</td>
                    <td>120,000 VND</td>
                </tr>
                <tr>
                    <td>9</td>
                    <td>MS2223</td>
                    <td>1 year</td>
                    <td>Anna White</td>
                    <td>275,000 VND</td>
                </tr>
                <tr>
                    <td>10</td>
                    <td>MS2425</td>
                    <td>3 months</td>
                    <td>Robert Harris</td>
                    <td>140,000 VND</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="chart-container">
        <canvas id="myChart"></canvas>
    </div>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['3 months', '6 months', 'Non-term'], // Giai đoạn
                datasets: [
                    {
                        label: 'Total Income',
                        data: [100000, 80000, 58000], 
                        backgroundColor: '#7FC2FF', // Màu sắc của cột
                        borderWidth: 1,
                        barThickness: 30 // Điều chỉnh kích thước của cột
                    },
                    {
                        label: 'Total Expense',
                        data: [50000, 120000, 140000], 
                        backgroundColor: '#FF5F9E',
                        borderWidth: 1,
                        barThickness: 30 // Điều chỉnh kích thước của cột
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            boxWidth: 20 // Kích thước của ô màu cho các chú thích
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': ' + context.raw + ' VND';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        stacked: false,
                        title: {
                            display: true,
                            text: 'Type of Savings'
                        }   
                    },
                    y: {
                        stacked: false,
                        title: {
                            display: true,
                        },
                       
                    }
                }
            }
        });
    </script>
</body>
</html>
