<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Savings Account Type</title>
    <link rel="stylesheet" href="/css/analysis-daily-report.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="header">
        <h1>Analysis</h1>
        <div class="row">
            <h2>Daily Report</h2>
            <button type="submit" class="btn-CSV" id="csv_button">Export CSV</button>
        </div>
    </div>
    <div>
        <a id="contact-link">
            <button class="button" id="contact-button">Contact</button>
        </a>
    </div>
    <div class="daily_report">
        <label for="date-report">Date</label>
        <input type="date" class="input-field" id="date-create" placeholder="01/01/2024">
    </div>
    <button class="create_button" id="create">Create Report</button>
    <div class="table-container">
        <table class="account-table">
            <caption>Deposit and Transaction Activity Report on 27/12/2023</caption>
            <thead>
                <tr>
        <th>Type of Savings</th>
        <th>Total Income (VND)</th>
        <th>Total Expense (VND)</th>
        <th>Difference (VND)</th>
    </tr>
</thead>
<tbody>
    <tr>
        <td>3 months</td>
        <td>500,000 VND</td>
        <td>200,000 VND</td>
        <td>300,000 VND</td>
    </tr>
    <tr>
        <td>6 months</td>
        <td>525,000 VND</td>
        <td>125,000 VND</td>
        <td>400,000 VND</td>
    </tr>
    <tr>
        <td>Non-term</td>
        <td>270,000 VND</td>
        <td>100,000 VND</td>
        <td>170,000 VND</td>
    </tr>
    <tr>
        <td>1 year</td>
        <td>525,000 VND</td>
        <td>250,000 VND</td>
        <td>275,000 VND</td>
    </tr>
    <tr class="total-row">
        <td>Total</td>
        <td>1,820,000 VND</td>
        <td>675,000 VND</td>
        <td>1,145,000 VND</td>
    </tr>
            </tbody>
        </table>
    </div>
    <div class="chart-container">
        <canvas id="myChart"></canvas>
    </div>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['3 months', '6 months', 'Non-term', '9 months','12 months'], // Giai đoạn
                datasets: [
                    {
                        label: 'Total Income',
                        data: [100000, 80000, 58000, 20000, 30000], 
                        backgroundColor: '#7FC2FF', // Màu sắc của cột
                        borderWidth: 1,
                        barThickness: 30 // Điều chỉnh kích thước của cột
                    },
                    {
                        label: 'Total Expense',
                        data: [50000, 120000, 180000,220000, 400000], 
                        backgroundColor: '#FF5F9E',
                        borderWidth: 1,
                        barThickness: 30 // Điều chỉnh kích thước của cột
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            boxWidth: 20 // Kích thước của ô màu cho các chú thích
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': ' + context.raw + ' VND';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        stacked: false,
                        title: {
                            display: true,
                            text: 'Type of Savings'
                        }   
                    },
                    y: {
                        stacked: false,
                        title: {
                            display: true,
                        },
                       
                    }
                }
            }
        });
        // Redirect
        document.addEventListener("DOMContentLoaded", function() {
            const currentDomain = window.location.origin;
            const contactPath = "/contact";
            const fullContactUrl = `${currentDomain}${contactPath}`;
            document.getElementById("contact-link").href = fullContactUrl;
        });
    </script>
</body>
</html>
