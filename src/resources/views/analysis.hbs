<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Savings Account Type</title>
    <link rel="stylesheet" href="/css/analysis.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="header">
        <h1>Analysis</h1>
        <div class="row">
            <h2>Find Account</h2>
             <a href="http://localhost:3000/analysis/find-account">
            <button type="submit" class="detail" id="csv_button">Detail</button>
        </a>
        </div>
    </div>
    <div>
        <a href="http://localhost:3000/contact">
            <button class="button" id="contact-button">Contact</button>
        </a>
    </div>

    <div class="table-container">
        <table class="account-table">
            <caption>List of Accounts</caption>
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID Account</th>
                    <th>Type of Saving</th>
                    <th>Customer's Name</th>
                    <th>Balance (VND)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>MS1234</td>
                    <td>3 months</td>
                    <td>John Doe</td>
                    <td>100,000 VND</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>MS5678</td>
                    <td>Short Term</td>
                    <td>Jane Smith</td>
                    <td>200,000 VND</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>MS9101</td>
                    <td>6 months</td>
                    <td>Emily Davis</td>
                    <td>300,000 VND</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>MS1213</td>
                    <td>Non-term</td>
                    <td>Michael Brown</td>
                    <td>150,000 VND</td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>MS1415</td>
                    <td>1 year</td>
                    <td>Sarah Wilson</td>
                    <td>250,000 VND</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="section-container">
        <div class="section-left">
            <div class="row_1">
                <p>Daily Report</p>
                 <a href="http://localhost:3000/analysis/daily-report">
                <button type="submit" class="detail_1" id="csv_button">Detail</button>
                </a>
                </div>
                <div class="chart-container">
                    <canvas id="barChart"></canvas>
                </div>
            </div>
        <div class="section-right">
            <div class="row_2">
                <p>Monthly Report</p>
                <a href="http://localhost:3000/analysis/monthly-report">
                <button type="submit" class="detail_2" id="csv_button">Detail</button>
                </a>
            </div>
                <div class="chart-container">
                    <canvas id="doughnutChart"></canvas>             
            </div>
        </div>
    </div>
    
    <script>
        // Script for the bar chart
var ctxBar = document.getElementById('barChart').getContext('2d');
var barChart = new Chart(ctxBar, {
    type: 'bar',
    data: {
        labels: ['3 months', '6 months', 'Non-term'], // Giai đoạn
        datasets: [
            {
                label: 'Total Income',
                data: [100000, 80000, 58000],
                backgroundColor: '#7FC2FF', // Màu sắc của cột
                borderWidth: 1,
                barThickness: 30 // Điều chỉnh kích thước của cột
            },
            {
                label: 'Total Expense',
                data: [50000, 120000, 140000],
                backgroundColor: '#FF5F9E',
                borderWidth: 1,
                barThickness: 30 // Điều chỉnh kích thước của cột
            }
        ]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'right',
                labels: {
                    boxWidth: 20 // Kích thước của ô màu cho các chú thích
                }
            },
            tooltip: {
                callbacks: {
                    label: function (context) {
                        return context.dataset.label + ': ' + context.raw + ' VND';
                    }
                }
            }
        },
        scales: {
            x: {
                stacked: false,
                title: {
                    display: true,
                    text: 'Type of Savings'
                }
            },
            y: {
                stacked: false,
                title: {
                    display: true,
                },
            }
        }
    }
});

// Script for the doughnut chart
 var ctxDoughnut = document.getElementById('doughnutChart').getContext('2d');
        var doughnutChart = new Chart(ctxDoughnut, {
            type: 'doughnut',
            data: {
                labels: ['Deposited', 'Withdrawn'],
                datasets: [{
                    data: [75, 25],
                    backgroundColor: ['#EF9C66', '#75A47F']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            boxWidth: 20,
                            padding: 20,
                        }
                    },
                },
                layout: {
                    padding: 10
                },
                cutout: '70%'
            }
        });
    </script>
</body>
</html>
